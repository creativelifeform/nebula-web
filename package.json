{
  "name": "nebula-web",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.8",
    "reset-css": "^4.0.1"
  },
  "scripts": {
    "start": "react-scripts start | npm run scss:watch",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "scss": "node-sass -o src/ui/style/css/ src/ui/style/scss",
    "scss:watch": "node-sass -w src/ui/style/scss -o src/ui/style/css/ src/ui/style/scss",
    "lint": "eslint ./src",
    "lint:circular": "madge --circular src"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "plugins": [
      "prettier",
      "react"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react/prop-types": [
        "error",
        {
          "ignore": [],
          "customValidators": [],
          "skipUndeclared": false
        }
      ],
      "react/no-typos": "error"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "import-sort-cli": "^5.2.0",
    "import-sort-parser-babylon": "^5.2.0",
    "import-sort-style-absolute": "^1.0.1",
    "madge": "^3.4.4",
    "node-sass": "^4.10.0",
    "prettier": "^1.15.2"
  }
}
